<%= form_with(model: @user, local: true) do |f| %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <%= render partial: 'shared/errors', locals: { obj: @user, field: :name } %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    <%= render partial: 'shared/errors', locals: { obj: @user, field: :email } %>
  </div>
  
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
    <%= render partial: 'shared/errors', locals: { obj: @user, field: :password } %>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    <%= render partial: 'shared/errors', locals: { obj: @user, field: :password_confirmation } %>
  </div>
  <%= f.submit class: "btn btn-primary"%>
<% end %>