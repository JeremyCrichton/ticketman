<%= form_with model: [@ticket, @comment], local: true do |f| %>
  <div class="form-group">
    <%= f.label :body, "Post comment" %>
    <%= f.text_area :body, class: "form-control" %>
    <%= render partial: 'shared/errors', locals: { obj: @comment, field: :body } %>
  </div>
  <div class="form-group">
      <%= label_tag :ticket_status, "Update ticket status" %>
      <%= select_tag :ticket_status, options_for_select(Ticket.statuses.map{|s| [s.first, s.first]}, params[:ticket_status]), id: :ticket_status, include_blank: "Do not change", class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary"%>
<% end %>